tap "homebrew/core"         # Default formulae for the missing package manager for macOS
tap "homebrew/cask"         # GUI applications for macOS
tap "homebrew/services"     # Manage background services with macOS' launchctl daemon manager

# Shells
brew "bash"                 # Bourne-Again SHell, a UNIX command interpreter {https://www.gnu.org/software/bash}
brew "fish"                 # User-friendly command-line shell for UNIX-like operating systems {https://fishshell.com}

# Dependencies
brew "openssl"              # Cryptography and SSL/TLS Toolkit {https://openssl-library.org}
brew "pkg-config"           # Helper tool for compiling applications and libraries {https://www.freedesktop.org/wiki/Software/pkg-config}
brew "ncurses"              # Text-based UI library {https://invisible-island.net/ncurses/announce.html}

# Version Control
brew "git"                  # Distributed revision control system {https://git-scm.com}
brew "svn"                  # Subversion version control system (still recommended to install even if not using, sometimes required by packages) {https://subversion.apache.org}

# Git tools
brew "git-delta"            # Syntax-highlighting pager for git and diff output {https://github.com/dandavison/delta}
brew "git-filter-repo"      # Quickly rewrite git repository history {https://github.com/newren/git-filter-repo}
brew "gh"                   # GitHub command-line tool {https://cli.github.com}

# Command-Line Tools
brew "coreutils"            # GNU File, Shell, and Text utilities {https://www.gnu.org/software/coreutils}
brew "bat"                  # Cat clone with syntax highlighting and Git integration {https://github.com/sharkdp/bat}
brew "eza"                  # Modern replacement for 'ls' with more features and better defaults {https://github.com/eza-community/eza}
brew "ripgrep"              # Fast, efficient search tool {https://github.com/BurntSushi/ripgrep}
brew "fzf"                  # Command-line fuzzy finder {https://github.com/junegunn/fzf}
brew "tree"                 # Display directories as trees (with optional color/HTML output) {https://oldmanprogrammer.net/source.php?dir=projects/tree}

# Text Processing
brew "jq"                   # Lightweight and flexible command-line JSON processor {https://jqlang.github.io/jq}
brew "yq"                   # Process YAML documents from the CLI {https://github.com/mikefarah/yq}

# System Monitoring
brew "htop"                 # Improved top (interactive process viewer) {https://htop.dev}

# Multimedia Tools
brew "ffmpeg"               # Play, record, convert, and stream audio and video {https://ffmpeg.org}
brew "imagemagick"          # Tools and libraries to manipulate images in many formats {https://imagemagick.org}

# Bash scripting
brew "shellcheck"           # Static analysis and lint tool for shell scripts
brew "shfmt"                # Shell parser, formatter, and interpreter (sh/bash/mksh)
